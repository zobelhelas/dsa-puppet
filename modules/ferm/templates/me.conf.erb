@def $SSH_SOURCES = (<%=

sshallowed = []

case hostname
  when 'logtest01', 'geo1' then sshallowed << [ '$DSA_IPS', '$HOST_NAGIOS_V4', '$HOST_DB_V4' ]
end

if sshallowed.length == 0
  sshallowed = [ '0.0.0.0/0' ]
end

sshallowed.join(' ')
%>);

@def $SSH_V6_SOURCES = (<%=

sshallowed = []

case hostname
  when 'logtest01', 'geo1', 'geo2', 'geo3' then sshallowed << [ '$DSA_V6_IPS', '$HOST_NAGIOS_V6', '$HOST_DB_V6' ]
end

if sshallowed.length == 0
  sshallowed = [ '::' ]
end

sshallowed.join(' ')
%>);

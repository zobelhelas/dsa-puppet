# on draghi, the domains git thing will run bind9 reload afterwards
%dnsadm		draghi,orff=(root)		NOPASSWD: /etc/init.d/bind9 reload
%dnsadm		draghi,orff=(geodnssync)	NOPASSWD: /usr/bin/make -C /srv/dns.debian.org/geo
